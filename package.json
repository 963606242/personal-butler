{
  "name": "personal-butler",
  "version": "1.0.0",
  "description": "个人管家应用 - 本地优先的智能生活管理平台",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:react\"",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev:react": "vite",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "cross-env ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ electron-builder",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps || electron-rebuild -f -w better-sqlite3",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "rebuild:sqlite": "npm rebuild better-sqlite3 --runtime=electron --target=28.0.0"
  },
  "keywords": [
    "personal-assistant",
    "local-first",
    "privacy",
    "electron",
    "react"
  ],
  "author": "Personal Butler Team",
  "license": "MIT",
  "dependencies": {
    "@ant-design/charts": "^2.6.7",
    "@ant-design/icons": "^5.2.6",
    "antd": "^5.11.5",
    "axios": "^1.6.2",
    "better-sqlite3": "^9.2.2",
    "chinese-lunar": "^0.1.4",
    "dayjs": "^1.11.10",
    "dexie": "^3.2.4",
    "lunar-javascript": "^1.7.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.3",
    "relationship-ts": "^0.1.1",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.personalbutler.app",
    "productName": "Personal Butler",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "docs/**/*"
    ],
    "win": {
      "target": "dir",
      "signAndEditExecutable": false
    }
  }
}
